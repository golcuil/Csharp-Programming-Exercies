// See https://aka.ms/new-console-template for more information

int month = DateTime.Now.Month;

switch (month)
{
    case 1:
        System.Console.WriteLine("January");
        break;
    case 2:
        System.Console.WriteLine("February");
        break;
    case 3:
        System.Console.WriteLine("March");
        break;
    case 4:
        System.Console.WriteLine("April");
        break;
    default:
        System.Console.WriteLine("Wrong entity");
        break;
}

switch (month)
{
    case 1:
    case 2:
    case 3:
        System.Console.WriteLine("Winter Months");
        break;
    default:
        System.Console.WriteLine("Summer Months");
        break;
}
