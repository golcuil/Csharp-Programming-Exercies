/* Odev1.1
*******************
Bir konsol uygulamasında kullanıcıdan pozitif bir sayı girmesini isteyin(n). 
Sonrasında kullanıcıdan n adet pozitif sayı girmesini isteyin. 
Kullanıcının girmiş olduğu sayılardan çift olanlar console'a yazdırın.
******************* */

System.Console.Write("Please enter a positive number: ");
int n = int.Parse(System.Console.ReadLine());

if(n<0){
    System.Console.WriteLine("Oups, You should enter 'Positive Integer' Value: ");
    n = int.Parse(System.Console.ReadLine());
}

int[] userArray = new int[n];

for (int i = 0; i < userArray.Length; i++)
{   
    System.Console.WriteLine("Please enter {0}. value: ",i+1);
    userArray[i] = int.Parse(System.Console.ReadLine());
    
}

Methods.EvenNumbers(userArray);

static class Methods{

    public static void EvenNumbers(int[] param){

        for (int i = 0; i < param.Length; i++)
        {
            if(param[i] % 2 == 0){
                System.Console.WriteLine(param[i]);
            }
        }

    }
}

/* ******************************** */


/* Odev1.2
*******************
Bir konsol uygulamasında kullanıcıdan pozitif iki sayı girmesini isteyin (n, m). 
Sonrasında kullanıcıdan n adet pozitif sayı girmesini isteyin. 
Kullanıcının girmiş olduğu sayılardan m'e eşit yada tam bölünenleri console'a yazdırın.
******************* */

System.Console.Write("Please enter a positive number: ");
int n = int.Parse(System.Console.ReadLine());
System.Console.WriteLine();
System.Console.Write("Enter second positive number: ");
int m = int.Parse(System.Console.ReadLine());


if(n<0){
    System.Console.WriteLine("Oups, You should enter 'Positive Integer' Value: ");
    n = int.Parse(System.Console.ReadLine());
}

if(m<0){
    System.Console.WriteLine("Oups, You should enter 'Positive Integer' Value: ");
    m = int.Parse(System.Console.ReadLine());
}

int[] userArray = new int[n];

for (int i = 0; i < userArray.Length; i++)
{   
    System.Console.WriteLine("Please enter {0}. value: ",i+1);
    userArray[i] = int.Parse(System.Console.ReadLine());
    
}
System.Console.WriteLine();

Methods.TamBolenler(userArray,m);

static class Methods{

    public static void TamBolenler(int[] param, int bolen){

        for (int i = 0; i < param.Length; i++)
        {
            if((param[i] % bolen == 0) || (param[i] == bolen)){
                System.Console.WriteLine(param[i]);
            }
        }

    }
}



/* ******************************** */

/* Odev1.3
*******************
Bir konsol uygulamasında kullanıcıdan pozitif bir sayı girmesini isteyin (n). 
Sonrasında kullanıcıdan n adet kelime girmesi isteyin. 
Kullanıcının girişini yaptığı kelimeleri sondan başa doğru console'a yazdırın.
******************* */

System.Console.Write("Lütfen istediğiniz kelime adetini yazınız: ");
int n = int.Parse(System.Console.ReadLine());
System.Console.WriteLine();
string[] kelimeler = new string[n];

for (int i = 0; i < kelimeler.Length; i++)
{
    System.Console.WriteLine("{0}. kelimenizi giriniz: ",i+1);
    kelimeler[i] = System.Console.ReadLine().ToString();
    if(kelimeler[i].Contains(" ")){
        System.Console.WriteLine("Sadece bir kelime giriniz ve boşluk bırakmayınız.");
        kelimeler[i] = System.Console.ReadLine().ToString();
    }
}
System.Console.WriteLine();
Methods.TersYazdir(kelimeler);

static class Methods{

    public static void TersYazdir(string[] param){

        for(int i = param.Length-1; i>=0; i--){
            System.Console.WriteLine(param[i]);
        }
    }

}

/* ******************************** */


/* Odev1.4
*******************
Bir konsol uygulamasında kullanıcıdan bir cümle yazması isteyin. 
Cümledeki toplam kelime ve harf sayısını console'a yazdırın.
******************* */

System.Console.WriteLine("Lütfen cümlenizi giriniz: ");
string cumle = System.Console.ReadLine().ToString();

Methods.KelimeHarf(cumle);


static class Methods{

    public static void KelimeHarf(string param){
        string[] kelimeArray = param.Split(" ");
        string fullSentence = string.Join("",kelimeArray);

        System.Console.WriteLine("Toplam kelime sayısı: " + kelimeArray.Length);
        System.Console.WriteLine("Toplam harf sayısı: " + fullSentence.Length);
        
    }

}

/* ******************************** */
